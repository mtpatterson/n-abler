{
  "name": "n-abler",
  "private": true,
  "version": "1.0.0",
  "description": "n-abler.org main theme",
  "author": "Brandon Patterson",
  "scripts": {
    "browser-sync": "browser-sync start --proxy 'n-abler.localhost' --watch --files '**/*.php, dist/*' --no-notify",
    "build:css": "sass scss:dist && postcss dist/*.css --use=autoprefixer --dir=dist",
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "start": "npm-run-all --parallel browser-sync watch:css"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "browser-sync": "^2.26.7",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "^7.0.30",
    "postcss-cli": "^7.1.1",
    "sass": "^1.26.5"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
