{
  "name": "n-abler",
  "private": true,
  "version": "1.0.0",
  "description": "n-abler.org main theme",
  "author": "Brandon Patterson",
  "scripts": {
    "browser-sync": "browser-sync start --proxy 'n-abler.localhost' --watch --files '**/*.php, dist/**/*' --no-notify",
    "prefix:css": "postcss dist/*.css --use=autoprefixer --dir=dist",
    "build:css": "sass --style=expanded src/scss:dist",
    "watch:css": "onchange 'src/scss/**/*.scss' -- npm run build:css",
    "webpack": "webpack -d --watch",
    "start": "npm-run-all --parallel browser-sync watch:css webpack",
    "format": "prettier --ignore-path .eslintignore \"**/*.+(js|json)\" --write",
    "lint": "eslint . --quiet",
    "test": "jest",
    "validate": "npm run test && lint-staged"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@testing-library/react": "^10.3.0",
    "autoprefixer": "^9.8.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "sass": "^1.26.8",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "lint-staged": {
    "*.+(js)": [
      "npm run lint"
    ],
    "**/*.+(js)": [
      "npm run format"
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "debug": false,
          "loose": true,
          "useBuiltIns": "usage",
          "corejs": "3"
        }
      ],
      "@babel/preset-react"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@frontend/(.*)$": "<rootDir>/src/js/$1"
    },
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/test/setup"
    ]
  }
}
